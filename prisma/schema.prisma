generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  clerkId   String    @unique
  firstName String
  lastName  String
  email     String
  isAdmin   Boolean   @default(false)
  imgUrl    String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

model Experience {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  date      String
  title     String
  shortDesc String
  links     Link[] // Relation field
  images    Image[] // Relation field
}

model Link {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  url          String
  experienceId String?     @db.ObjectId // References Experience
  experience   Experience? @relation(fields: [experienceId], references: [id])
}

model Image {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  url          String
  experienceId String?     @db.ObjectId // References Experience
  experience   Experience? @relation(fields: [experienceId], references: [id])
}

model Project {
  id                String       @id @default(auto()) @map("_id") @db.ObjectId
  title             String
  description       String
  image             String
  ctaText           String
  ctaLink           String
  arrayTechnologies Technology[] // References multiple technologies
}

model Technology {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  shortDescription String
  image            String
  backgroundColor  String // Added missing field for background color
  projectId        String?  @db.ObjectId // References Project
  project          Project? @relation(fields: [projectId], references: [id])
}
